@{
  Layout = "_Layout";
}

@model OpalCollege.Models.Course

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Title)
  @Html.TextBoxFor(model => model.Title)

  @Html.LabelFor(model => model.Department)
  @Html.TextBoxFor(model => model.Department)

  @Html.LabelFor(model => model.Level)
  @Html.TextBoxFor(model => model.Level)

  @Html.LabelFor(model => model.Professor)
  @Html.TextBoxFor(model => model.Professor)

  <input type="submit" value="Create Course">
}