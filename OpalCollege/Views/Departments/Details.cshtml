@{
  Layout = "_Layout";
}

@using OpalCollege.Models
@* @model OpalCollege.Models.Course *@

Department Details:

@* <h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model = model.Title)</h3> *@

<p>Department Subject: @Model.Subject</p>

@* <p>Level: @Model.Level</p>
<p>Professor: @Model.Professor</p> *@

@if (Model.JoinEntities.Count == 0)
{
  <p>This Department has no Courses.</p>
}
else
{
  <h4>Courses in this Department:</h4>
  <ul>
  @foreach (DepartmentCourse join in Model.JoinEntities)
  {
    <li>@Html.ActionLink($"{join.Course.Title}", "Details", "Courses", new { id = join.Course.CourseId})
      @using (Html.BeginForm("DeleteJoin", "Courses"))
      {
        @Html.Hidden("joinId", @join.DepartmentCourseId)
        <input type="submit" value="Remove Course from Department"/>
      }
    </li>
  }
  </ul>
}


