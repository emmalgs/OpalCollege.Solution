@using OpalCollege.Models

@if (Model.Count == 0)
{
  <p>There are no departments at this college, yet</p>
}

@foreach (Department department in Model)
{
  <li>@Html.ActionLink($"{department.Subject}", "Details", new { id = department.DepartmentId })</li>
}

@Html.ActionLink("Add department", "Create")
