@{
  Layout = "_Layout";
}

@model OpalCollege.Models.Student
<h2>Edit</h2>

<h4>Edit this student: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.EnrollDate)
  @Html.EditorFor(model => model.EnrollDate, new { type="date" })

  @Html.LabelFor(model => model.Department)
  @Html.DropDownList("DepartmentId")

  <input type="submit" value="Save" />
}