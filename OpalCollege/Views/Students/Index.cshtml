@{
  Layout = "_Layout";
}
<hr />
<h2>Students</h2>
@using OpalCollege.Models

@if (Model.Count == 0)
{
  <p>Add some students, please</p>
}

@foreach (Student student in Model)
{
  <p>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId})</p>
}

@Html.ActionLink("Register a student", "Create")